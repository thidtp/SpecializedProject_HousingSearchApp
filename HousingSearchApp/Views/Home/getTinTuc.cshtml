@model List<HousingSearchApp.Models.TINTUC_DTO>

@foreach (var item in Model)
{
    <div class="news-item w-full border rounded p-4 mb-4 mt-4 ml-9" style="width: 300px; flex-shrink: 0;">
        <a href="@Url.Action("ChiTietTinTuc", "TinTuc", new { maTT = item.MaTinTuc })">
            <img src="~/Image/DuLieu/TinTuc/@item.TenFileAnh" alt="News 1" class="w-full h-48 object-cover">
            <div class="p-4">
                <h2 class="text-lg font-semibold mb-2 whitespace-normal">@item.TieuDe</h2>
                <p class="text-gray-600 text-md whitespace-normal ">@(item.TieuDe.Length > 100 ? item.TieuDe.Substring(0, 100) + "..." : item.TieuDe) </p>
            </div>
        </a>
    </div>
}
